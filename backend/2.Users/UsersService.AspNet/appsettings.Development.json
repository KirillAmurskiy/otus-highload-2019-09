{
  "ConnectionStrings": {
    "MySql": "server=localhost;port=3306;database=users;user=UsersApp;password=UsersApp"
  },

  "Auth": {
    "UseTestAuth": true,
    "AuthorityUrl": "http://localhost:5000",
    "RequireHttpsMetadata": false
  },
  
  "PhantomAmmoCollector": {
    "Enabled": true,
    "AllRequestsFile": "ammoAll.txt",
    "GoodRequestsFile": "ammoGood.txt",
    "BadRequestsFile": "ammoBad.txt"
  },
  
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "restrictedToMinimumLevel": "Debug"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/logs-.log",
          "rollingInterval": "Day"
        }
      }
    ]
  }
}
